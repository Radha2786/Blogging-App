<% layout('layouts/boilerplate') %>
    <%- include('../partials/navbar') %>

        <div class="home-article container1">

            <div class="home-article-content container2">
                <h3>
                    <%=foundblog.title%>
                </h3>
                <!-- <p>
                <%=foundblog.desc%>
            </p> -->
                <span>
                    By: <%=foundblog.author%>
                </span>
                <span>07 January | 6 min read</span>
                <div class="rudy1">

                    <div class="rudy">
                        <div class="home-article-img ">
                            <img src="<%=foundblog.img%>" alt="">
                        </div>

                        <p>
                            <%=foundblog.desc%>
                        </p>
                    </div>

                </div>
            </div>
        </div>
        <div class="comment-section">
            <div class="sub-comment-section">

                <i class="fa-solid fa-heart"></i>
                <i class="fa-regular fa-comment" id="showFormIcon"></i>

            </div>
            <div class="sub-comment-section">

                <i class="fa-regular fa-bookmark"></i>
                <i class="fa-solid fa-ellipsis"></i>

            </div>
        </div>
        <!-- <hr> -->

        <div class="form col-lg-6 mx-auto" id="Myform">
            <h2>Leave a Review</h2>
            <form action="/blogs/<%=foundblog._id%>/review" method="POST">
                <div class="form-group mb-3">

                    <!-- <label class="form-label" for="stars">Rating: </label>
                    <input type="range" class="form-control" id="stars" min="0" max="5" name="rating"> -->
                    <fieldset class="starability-basic">
                        <legend>First rating:</legend>
                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked
                            aria-label="No rating." />
                        <input type="radio" id="second-rate1" name="rating" value="1" />
                        <label for="second-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="second-rate2" name="rating" value="2" />
                        <label for="second-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="second-rate3" name="rating" value="3" />
                        <label for="second-rate3" title="Average">3 stars</label>
                        <input type="radio" id="second-rate4" name="rating" value="4" />
                        <label for="second-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="second-rate5" name="rating" value="5" />
                        <label for="second-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div class="form-group mb-3">
                    <label class="form-label" for="comment">Comment: </label>
                    <textarea class="form-control" row="3" name="comment" id="comment"></textarea>
                </div>

                <button type="submit" class="btn btn-sm btn-success"
                    style="background-color: blueviolet; color: white;">Add
                    Review</button>
            </form>
        </div>

        <!-- showing reviews of a particular product -->
        <div class="mt-3 col-lg-6 mx-auto carddiv">
            <% for(let review of foundblog.reviews){ %>
                <div class="card" style="border-color: white">
                    <div class="card-body">
                        <p class="starability-result" data-rating="<%=review.rating%>"></p>

                        <p class="card-text">comment: <%=review.comment%>
                        </p>

                        <p style="font-style: italic; font-family:'auto';">
                            <% if(review.createdAt){ %>
                                <%=review.createdAt.toDateString()%>
                                    <% } %>
                        </p>

                        <a href="#" class="btn btn-primary"
                            style="background-color: #f5bd23; border-color: white;">Delete</a>
                    </div>
                </div>
                <% } %>

        </div>